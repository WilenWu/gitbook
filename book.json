{
  "root": "./foundational-physics/",
  "title": "基础物理",
  "author": "WilenWu",
  "language": "zh-hans",
  
  "structure": {
    "readme": "README.md",
    "summary": "SUMMARY.md"
  },  

  "variables": {
      "themeFexa":{
          "showHome": true, 
          "showNavigator": false,
          "nav":[
              {
                  "url": "/bookshelf/",
                  "target": "_blank",
                  "name": "返回书架"
              }
          ]
      }
  },
    
  "plugins": [
    "theme-fexa-black", "-sharing",  "-fontsettings",
    "search-pro",  "-search",  "-lunr",
    "expandable-chapters",
    "splitter",
    "anchor-navigation-ex",
    "hide-element",
    "tbfed-pagefooter",
    "github-buttons", 
    "mygitalk", 
    "popup", 
    "prism",  "-highlight",  
    "copy-code-button",
    "codeblock-filename",
    "flexible-alerts",
    "katex-plus",
    "mermaid",
    "sitemap",
    "baidu"
  ],
  
  "pluginsConfig": {
    "theme-default": {
        "showLevel": false
    },
    "theme-fexa":{
      "search-placeholder":"输入关键字搜索", 
      "logo":"./images/logo.png", 
      "favicon": "./images/favicon.png" 
    },
    "favicon": "favicon.png",
    "search-pro": {
      "cutWordLib": "nodejieba",
      "defineWord" : ["Gitbook Use"]
    },
    "insert-logo": {
      "url": "logo.png",
      "style": "background: none; max-height: 30px; min-height: 30px"
    },   
    "anchor-navigation-ex": {
      "showLevel": false,
      "associatedWithSummary": false,
      "printLog": false,
      "multipleH1": true,
      "mode": "float"
    },
    "hide-element": {
      "elements": [".gitbook-link"]
    },
    "tbfed-pagefooter": {
      "copyright":"Copyright &copy WilenWu",
      "modify_label": "更新于 ",
      "modify_format": "YYYY-MM-DD HH:mm:ss"
    },
    "mygitalk": {
      "clientID": "60decc199e52a19f035d",
      "clientSecret": "fe95a75c03105bf4566a72968f6dfcfd3b861344",
      "repo": "gitalk",
      "owner": "wilenwu",
      "admin": ["wilenwu"],
      "distractionFreeMode": true
     },
    "github-buttons": { 
      "buttons": [{
        "user": "wilenwu",   
        "repo": "wilenwu.github.io",
        "type": "star",
        "size": "small" 
      }]
    },
    "prism": {
      "css": [
        "prismjs/themes/prism-okaidia.css"
      ]
    },
    "flexible-alerts": {
      "style": "callout",
      "comment": {
        "label": "Comment",
